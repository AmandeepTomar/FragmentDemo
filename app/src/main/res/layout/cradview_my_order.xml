<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    android:elevation="10dp">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:gravity="center"
        android:text="Item Order Date "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_cardView_MOH_OrderDate"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:background="@android:color/darker_gray" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/ic_facebook"
        android:id="@+id/iv_cardView_MOH_ItemPic"
        android:layout_below="@+id/tv_cardView_MOH_OrderDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:gravity="center"
        android:text="Item Name "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_cardView_MOH_ItemPic"
        android:layout_toRightOf="@+id/iv_cardView_MOH_ItemPic"
        android:layout_toEndOf="@+id/iv_cardView_MOH_ItemPic"
        android:id="@+id/tv_cardView_MOH_ItemName"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:gravity="center"
        android:text="Item Status "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_cardView_MOH_ItemName"
        android:layout_toRightOf="@+id/iv_cardView_MOH_ItemPic"
        android:layout_toEndOf="@+id/iv_cardView_MOH_ItemPic"
        android:id="@+id/tv_cardView_MOH_ItemStatus"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:gravity="center"
        android:text="Item deliver On"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_cardView_MOH_ItemStatus"
        android:layout_toRightOf="@+id/iv_cardView_MOH_ItemPic"
        android:layout_toEndOf="@+id/iv_cardView_MOH_ItemPic"
        android:id="@+id/tv_cardView_MOH_OrderDelivered"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/iv_cardView_MOH_ItemPic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/surfaceView"
        android:background="@color/black"
        android:layout_margin="3dp" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/surfaceView"
    android:id="@+id/cardView_MOH_relativeViewForReview"
    android:visibility="gone">
    <TextView
        android:text="Rate and Review the product based on your Experince "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_cardView_MOH_ReviewfIXED"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_below="@+id/tv_cardView_MOH_ReviewfIXED"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/ratingBar_cardView_MOH_RatingBar"
        android:layout_margin="5dp"
        style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
        android:layout_height="30dp"
        android:clickable="true" />

    <TextView
        android:gravity="center"
        android:text="Edit Your Review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ratingBar_cardView_MOH_RatingBar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/tv_cardView_MOH_editReview"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
</RelativeLayout>
</RelativeLayout>
    </android.support.v7.widget.CardView>