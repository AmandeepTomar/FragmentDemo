<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_cardview_publishReview_itemName"
        android:layout_toRightOf="@+id/iv_cardview_publishReview_itemImage"
        android:layout_toEndOf="@+id/iv_cardview_publishReview_itemImage"
        android:id="@+id/tv_cardview_publishReview_itemDesc"
        android:layout_margin="5dp"
        tools:text="Item Desc" />

    <TextView
        android:text="Item Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_cardview_publishReview_itemName"
        android:layout_alignTop="@+id/iv_cardview_publishReview_itemImage"
        android:layout_toRightOf="@+id/iv_cardview_publishReview_itemImage"
        android:layout_toEndOf="@+id/iv_cardview_publishReview_itemImage"
        android:layout_margin="5dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/corners"
        android:id="@+id/iv_cardview_publishReview_itemImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar_cardview_writeReview_ratingBar"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_alignBottom="@+id/iv_cardview_publishReview_itemImage"
        android:layout_alignLeft="@+id/tv_cardview_publishReview_itemDesc"
        android:layout_alignStart="@+id/tv_cardview_publishReview_itemDesc"
        android:layout_margin="5dp" />

    <View
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:layout_below="@+id/iv_cardview_publishReview_itemImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view_cardview_writeReview_View"
        android:background="@color/black"/>

    <TextView
        android:layout_margin="10dp"
        android:text="Edit Review "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_cardview_publishReview_EditReview"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_alignTop="@+id/view_cardview_writeReview_View"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Remove Review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_cardview_publishReview_EditReview"
        android:layout_alignRight="@+id/view_cardview_writeReview_View"
        android:layout_alignEnd="@+id/view_cardview_writeReview_View"
        android:layout_marginRight="31dp"
        android:layout_marginEnd="31dp"
        android:id="@+id/tv_cardview_publishReview_RemoveReview"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="18sp"/>


</RelativeLayout>
</android.support.v7.widget.CardView>